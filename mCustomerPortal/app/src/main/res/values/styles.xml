<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <!--Style with status bar color Translucent Status-->
    <style name="AppTheme4" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <!--Stype with status bar color same promary color-->
    <style name="AppTheme3" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/white</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/red</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>


    <style name="MyActionBarTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:titleTextStyle">@style/MyActionBarTextStyle</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/red</item>
    </style>


    <!-- Order stype -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme2" parent="@style/Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- <item name="android:statusBarColor">@color/red_dark</item> -->
        <item name="colorPrimary">@color/white</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/red_dark</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/red</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <!--<style name="SeekBarTheme" parent="Theme.AppCompat.Light">
        <item name="android:progressBackgroundTint">@color/grey_light</item>
        <item name="android:progressTint">@color/grey_dark</item>
        <item name="android:colorControlActivated">null</item>
    </style>-->

    <!--Switch Button-->
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#de122d</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="switchFinger" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textColorPrimaryDisableOnly">@color/dark_grey</item>
        <item name="android:colorControlActivated">@color/red</item>
        <item name="android:colorForeground">@color/grey_light</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="switch2Layer" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textColorPrimaryDisableOnly">@color/dark_grey</item>
        <item name="android:colorControlActivated">@color/green</item>
        <item name="android:colorForeground">@color/grey_light</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <!--OTP View-->
    <style name="OtpWidget" />

    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--Style button-->
    <style name="LineButtonMenu">
        <item name="android:minHeight">95dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TextViewMainButton">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="LineLayoutMainButton">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>