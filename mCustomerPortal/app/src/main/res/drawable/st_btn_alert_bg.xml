<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/blue_dark" />

            <padding android:bottom="5dp" android:left="15dp" android:right="15dp" android:top="5dp" />

            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
        </shape></item>
    <item android:state_activated="true"><shape>
            <solid android:color="@color/blue_dark" />

            <padding android:bottom="5dp" android:left="15dp" android:right="15dp" android:top="5dp" />

            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
        </shape></item>
    <item><shape>
            <solid android:color="@color/white" />

            <padding android:bottom="5dp" android:left="15dp" android:right="15dp" android:top="5dp" />

            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
        </shape></item>

</selector>