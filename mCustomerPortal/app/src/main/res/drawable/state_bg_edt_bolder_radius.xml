            <stroke
                android:width="0.4dp"
                android:color="@color/grey_dark" />

            <solid android:color="@color/white" />

            <corners android:radius="3dp" />
            
            <padding android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"/>
        </shape>
    </item>

</layer-list>