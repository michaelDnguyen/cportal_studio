<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/blue_dark" />

            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />

            <corners android:bottomLeftRadius="30dp" android:bottomRightRadius="30dp" android:topLeftRadius="30dp" android:topRightRadius="30dp" />

        </shape>
    </item>
    <item android:state_activated="true">
        <shape>
            <solid android:color="@color/blue_dark" />

            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />

            <corners android:bottomLeftRadius="30dp" android:bottomRightRadius="30dp" android:topLeftRadius="30dp" android:topRightRadius="30dp" />

        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/blue_facebook" />

            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />

            <corners android:bottomLeftRadius="30dp" android:bottomRightRadius="30dp" android:topLeftRadius="30dp" android:topRightRadius="30dp" />

        </shape>
    </item>

</selector>