<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/red_dark" />

            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />

            <stroke android:width="1dp" android:color="@color/red_dark" />

            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
        </shape></item>
    <item android:state_activated="true"><shape>
            <solid android:color="@color/red_dark" />

            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />

            <stroke android:width="1dp" android:color="@color/red_dark" />

            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
        </shape></item>
    <item><shape>
            <solid android:color="@color/red" />

            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />

            <stroke android:width="1dp" android:color="@color/red" />

            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
        </shape></item>

</selector>