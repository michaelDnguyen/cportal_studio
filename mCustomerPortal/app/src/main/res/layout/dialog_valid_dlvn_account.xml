<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:padding="6dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="Nhập thông tin xác thực"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize18"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:src="@drawable/ic_back_white" />

        <TextView
            android:id="@+id/tvDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:padding="10dp"
            android:text="Xóa hết"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize14"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_light"
        android:padding="10dp"
        android:text="Vui lòng chọn loại giấy tờ:"
        android:textSize="@dimen/textsize16"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <EditText
            android:id="@+id/edtPolicyID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:cursorVisible="true"
            android:hint="Số hợp đồng"
            android:textCursorDrawable="@color/black" />

        <EditText
            android:id="@+id/edtCMND"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtPolicyID"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:cursorVisible="true"
            android:hint="Số chứng minh thư"
            android:textCursorDrawable="@color/black" />

        <TextView
            android:id="@+id/tvDoB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtCMND"
            android:textSize="@dimen/textsize18"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:hint="Ngày sinh nhật"
            android:textCursorDrawable="@color/black" />

        <Button
            android:id="@+id/btnXacNhan"
            android:layout_width="match_parent"
            android:layout_below="@id/tvDoB"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/state_btn_red_rectangle"
            android:text="Xác nhận"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>