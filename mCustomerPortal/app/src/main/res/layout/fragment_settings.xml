<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.dlvn.mcustomerportal.afragment.SettingsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/st_bg_white_noborder_noradius"
                android:drawableLeft="@drawable/ico_account"
                android:drawablePadding="30dp"
                android:drawableRight="@drawable/ico_arrow_right_grey"
                android:drawableTint="@color/red"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:text="@string/setting_txt_taikhoan"
                android:textAllCaps="false"
                android:textColor="@drawable/st_textcolor_normal_red" />

            <Button
                android:id="@+id/btnSecurity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/st_bg_white_noborder_noradius"
                android:drawableLeft="@drawable/ico_key"
                android:drawablePadding="30dp"
                android:drawableRight="@drawable/ico_arrow_right_grey"
                android:drawableTint="@color/red"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:text="@string/setting_txt_baomat"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/st_bg_white_noborder_noradius"
                android:drawableLeft="@drawable/ico_link"
                android:drawablePadding="30dp"
                android:drawableRight="@drawable/ico_arrow_right_grey"
                android:drawableTint="@color/red"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:text="@string/setting_txt_lktaikhoan"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnClaims"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/st_bg_white_noborder_noradius"
                android:drawableLeft="@drawable/ic_contacts_black_24dp"
                android:drawablePadding="30dp"
                android:drawableRight="@drawable/ico_arrow_right_grey"
                android:drawableTint="@color/red"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:text="@string/setting_txt_claims"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/st_bg_white_noborder_noradius"
                android:drawableLeft="@drawable/ico_notification"
                android:drawablePadding="30dp"
                android:drawableRight="@drawable/ico_arrow_right_grey"
                android:drawableTint="@color/red"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:text="@string/setting_txt_thongbao"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnTutorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/st_bg_white_noborder_noradius"
                android:drawableLeft="@drawable/ico_document"
                android:drawablePadding="30dp"
                android:drawableRight="@drawable/ico_arrow_right_grey"
                android:drawableTint="@color/red"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:text="@string/setting_txt_hdsd"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/st_bg_white_noborder_noradius"
                android:drawableLeft="@drawable/ico_history"
                android:drawablePadding="30dp"
                android:drawableRight="@drawable/ico_arrow_right_grey"
                android:drawableTint="@color/red"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:text="@string/setting_txt_lichsu_thanhtoan"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/st_bg_white_noborder_noradius"
                android:drawableLeft="@drawable/ico_distance"
                android:drawablePadding="30dp"
                android:drawableRight="@drawable/ico_arrow_right_grey"
                android:drawableTint="@color/red"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:text="@string/setting_txt_map"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnPriceILP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/st_bg_white_noborder_noradius"
                android:drawableLeft="@drawable/ico_unitprice"
                android:drawablePadding="30dp"
                android:drawableRight="@drawable/ico_arrow_right_grey"
                android:drawableTint="@color/red"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:text="@string/setting_txt_priceilp"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/st_bg_white_noborder_noradius"
                android:drawableLeft="@drawable/ico_call"
                android:drawablePadding="30dp"
                android:drawableRight="@drawable/ico_arrow_right_grey"
                android:drawableTint="@color/red"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:text="@string/setting_txt_lienhe"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/st_bg_white_noborder_noradius"
                android:drawableLeft="@drawable/ico_info"
                android:drawablePadding="30dp"
                android:drawableRight="@drawable/ico_arrow_right_grey"
                android:drawableTint="@color/red"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:text="@string/setting_txt_thongtin"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/st_bg_white_noborder_noradius"
                android:drawableLeft="@drawable/ico_logout"
                android:drawablePadding="30dp"
                android:drawableRight="@drawable/ico_arrow_right_grey"
                android:drawableTint="@color/red"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:text="@string/setting_txt_dangxuat"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/tvVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:padding="10dp"
                android:text="Phiên bản 1.0"
                android:textAllCaps="false" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
