<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/an_tam_hung_thinh_2" />

    <TextView
        android:id="@+id/tvTenSanPham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:gravity="center"
        android:padding="7dp"
        android:text="An tâm hưng thịnh"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize17"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvMaHopDong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Mã hợp đồng 00076589"
        android:textSize="@dimen/textsize15" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/xemThem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem Thêm"
            android:textColor="@color/red"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/xemThem"
            android:text=">>"
            android:textColor="@color/red" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/xemThem"
            android:src="@color/red" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvTongPhiDaDong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="6,450,000"
        android:textColor="@color/red"
        android:textSize="@dimen/textsize16"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng phí bảo hiểm đã đóng"
        android:textColor="@color/gray"
        android:textSize="@dimen/textsize10"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phí cơ bản"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize10" />

            <TextView
                android:id="@+id/tvPhiCoBan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="1,500,000"
                android:textColor="@color/red"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNgayDongPhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Ngày đóng 12/10/2017"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize12"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày gia hạn"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize10" />

            <TextView
                android:id="@+id/tvNgayGiaHan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="12/12/2017"
                android:textColor="@color/red"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNgayConLai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="còn 10 ngày"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize12"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnChiTiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/state_btn_page_home"
        android:gravity="center"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Xem chi tiết"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="gone" />

</LinearLayout>