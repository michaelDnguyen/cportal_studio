<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/llo01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imv1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/huan_chuong" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="cổng thông tin khách hàng"
                    android:textAllCaps="true"
                    android:textColor="@color/dark_grey"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Với mục tiêu phát triển mối quan hệ gắn kết với Khách hàng tham gia bảo hiểm thông qua việc cập nhật thường xuyên cho khách hàng..." />


                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/xemThem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xem Thêm"
                        android:textColor="@color/red"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/xemThem"
                        android:text=">>"
                        android:textColor="@color/red" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/xemThem"
                        android:src="@color/red" />

                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:src="@color/red" />

            <LinearLayout
                android:id="@+id/llo02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imv2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/an_tam_hung_thinh_2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sản phẩm bảo hiểm"
                    android:textAllCaps="true"
                    android:textColor="@color/dark_grey"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Với phương châm hoạt động Khách hàng là trên hết nhằm tri ân tât cả Quý khách hàng đã tín nhiệm lựa chọn tham gia bảo..." />

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/xemThem1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xem Thêm"
                        android:textColor="@color/red"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/arrow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/xemThem1"
                        android:text=">>"
                        android:textColor="@color/red" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/xemThem1"
                        android:src="@color/red" />

                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:src="@color/red" />

            <!-- Biểu đồ giá đơn vị -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Giá đơn vị quỹ liên kết đơn vị"
                android:textAllCaps="true"
                android:textColor="@color/dark_grey"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Theo dõi giá đơn vị quỹ liên kết đơn vị"
                android:textColor="@color/dark_grey"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="gone">

                <lecho.lib.hellocharts.view.LineChartView
                    android:id="@+id/chart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />
            </LinearLayout>

            <!--Xem thêm chart-->
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/xemThem3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem Thêm"
                    android:textColor="@color/red"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/arrow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/xemThem3"
                    android:text=">>"
                    android:textColor="@color/red" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/xemThem3"
                    android:src="@color/red" />

            </RelativeLayout>

            <!--Thanh toán phí bảo hiểm-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="10dp"
                    android:src="@color/red" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="thanh toán phí bảo hiểm trực tuyến"
                    android:textAllCaps="true"
                    android:textColor="@color/dark_grey"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quý khách có thể thực hiện thanh toán phí bảo hiểm, hoàn trả tạm ứng qua 3 bước đơn giản"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/xemThem2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xem Thêm"
                        android:textColor="@color/red"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/arrow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/xemThem2"
                        android:text=">>"
                        android:textColor="@color/red" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/xemThem2"
                        android:src="@color/red" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tôi muốn thanh toán"
                    android:textColor="@color/dark_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></Spinner>
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/state_btn_red_rectangle"
                    android:text="Tiếp tục"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="10dp"
                    android:src="@color/red" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="các sản phẩm bảo hiểm"
                    android:textAllCaps="true"
                    android:textColor="@color/dark_grey"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/lloHopDong"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/llo01"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/st_bg_page_home"
                    android:orientation="vertical">

                    <com.dlvn.mcustomerportal.view.indicator.ScrollerViewPager
                        android:id="@+id/view_pager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1" />

                    <com.dlvn.mcustomerportal.view.indicator.CirclePageIndicator
                        android:id="@+id/indicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        app:centered="true" />
                </LinearLayout>
            </LinearLayout>

            <!--View youtube-->

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:src="@color/red" />


            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></WebView>

            <!--Xem thêm chart-->
            <RelativeLayout
                android:id="@+id/rlYoutube"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:visibility="visible">

                <TextView
                    android:id="@+id/xemThem4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem Thêm"
                    android:textColor="@color/red"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/arrow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/xemThem4"
                    android:text=">>"
                    android:textColor="@color/red" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/xemThem4"
                    android:src="@color/red" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>